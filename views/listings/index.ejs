<% layout("/layouts/boilerplate") %>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</a></button>
    </form> -->
    <div class="row row-col-lg-4 row-cols-md-4 row-col-sm-1">
        
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing.id %>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 15rem;" />

            <div class="card-img-overlay">like</div>

            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %> <br></b>
                &#8377; &nbsp;<%=listing.price.toLocaleString("en-IN")%> /night <br>
             </p>
            </div>
          </div>
         <% } %>
      </a>
    </div> 
    <br>
    


